	// 	}else if (grade == 2) {
	// 		monthlySalary = 5000000;
	// 		if (isForeigner) {
	// 			monthlySalary = (int) (3000000 * 1.5);
	// 		}
	// 	}else if (grade == 3) {
	// 		monthlySalary = 7000000;
	// 		if (isForeigner) {
	// 			monthlySalary = (int) (3000000 * 1.5);
	// 		}
	// 	}
